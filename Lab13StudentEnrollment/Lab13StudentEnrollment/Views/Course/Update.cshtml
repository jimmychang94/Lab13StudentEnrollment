@model Course

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="~/StyleSheet.css" />

<div class="container" style="margin-top:20px;">
    <h2>Update a Course</h2>
    <form method="post" asp-action="Update">
        <div class="form-group row">
            <h4><label asp-for="Name" class="col-sm-3 col-form-label">Name </label></h4>
            <div class="col-sm-9">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <h4><label asp-for="Description" class="col-sm-3 col-form-label">Description</label></h4>
            <div class="col-sm-9">
                <input asp-for="Description" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-col-sm-3">
                <input type="submit" class="btn btn-primary" value="Update" />
            </div>
        </div>
    </form>

    <br />
    <div>
        <a asp-action="Index">Back to Course List</a>
    </div>
</div>