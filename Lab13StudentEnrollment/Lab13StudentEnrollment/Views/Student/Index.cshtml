@model List<Lab13StudentEnrollment.Models.Student>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="~/StyleSheet.css" />

<div class="container" style="margin-top:20px;">
    <form asp-controller="Student" asp-action="Index" method="get">
        <p>
            Search for specific names: <input type="text" name="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Course Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in @Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.CourseName</td>
                    <td><a asp-action="Update" asp-route-id="@student.ID">Update Student</a></td>
                    <td><a asp-action="Delete" asp-route-id="@student.ID">Remove Student</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-action="Create">Add New Student</a>
        <br />
        <br />
        <a asp-controller="Student" asp-action="Index">Student List</a>
        <br />
        <br />
        <a asp-controller="Course" asp-action="Index">Course List</a>
        <br />
        <br />
        <a asp-controller="Home" asp-action="Index">Let's go back home</a>
    </div>
</div>